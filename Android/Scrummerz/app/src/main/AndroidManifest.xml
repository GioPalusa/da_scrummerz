<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.newton.scrummerz">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".signedInStart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity_courses"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CourseInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".grades_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".assignment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".assignment_grades"
            android:screenOrientation="portrait" />
        <activity
            android:name=".scanner"
            android:screenOrientation="portrait" />

        <receiver android:name=".Notification_reciever" />

        <activity android:name=".assignment_info"></activity>
    </application>

</manifest>