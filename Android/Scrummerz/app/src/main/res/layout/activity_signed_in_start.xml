<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    tools:context="se.newton.scrummerz.signedInStart">

    <TextView
        android:id="@+id/scanner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:text="Registrera närvaro"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/myCoursesTextView"
        app:layout_constraintTop_toBottomOf="@+id/myGradesTextView" />

    <TextView
        android:id="@+id/myGradesTextView"
        android:layout_width="154dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Mina betyg"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/myCoursesTextView"
        app:layout_constraintTop_toBottomOf="@+id/myCoursesTextView"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/feedbackTextView"
        android:layout_width="154dp"
        android:layout_height="30dp"
        android:text="Ge feedback"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/welcome"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/myCoursesTextView"
        android:layout_width="154dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="Mina kurser"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/feedbackTextView"
        app:layout_constraintTop_toBottomOf="@+id/feedbackTextView"
        android:layout_marginLeft="-4dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="361dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Välkommen"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hur känner du dig idag?"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp" />

    <ImageButton
        android:id="@+id/negative"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:srcCompat="@drawable/scared"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/neutral"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/neutral" />

    <ImageButton
        android:id="@+id/positive"
        android:layout_width="70dp"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cool"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</android.support.constraint.ConstraintLayout>
